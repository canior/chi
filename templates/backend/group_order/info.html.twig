{% extends 'backend/base.html.twig' %}

{% block title %}集call订单{% endblock %}

{% import 'form/macros.html.twig' as macros %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- BAR CHART -->
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">集call信息</h3>
                                </div>
                                <div class="box-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped">
                                            <tr>
                                                <th>集call ID</th>
                                                <td>{{ group_order.id }}</td>
                                            </tr>
                                            <tr>
                                                <th>创建用户</th>
                                                <td>{{ group_order.user }}</td>
                                            </tr>
                                            <tr>
                                                <th>课程</th>
                                                <td>{{ group_order.product.title }}</td>
                                            </tr>
                                            <tr>
                                                <th>集call进度</th>
                                                <td> {{ group_order.totalGroupUserOrdersRequired - group_order.restGroupUserOrdersRequired}} / {{ group_order.totalGroupUserOrdersRequired}}</td>
                                            </tr>
                                            <tr>
                                                <th>创建日期</th>
                                                <td>{{ group_order.createdAT }}</td>
                                            </tr>
                                            <tr>
                                                <th>完成日期</th>
                                                <td>{{ group_order.completedAt }}</td>
                                            </tr>
                                            <tr>
                                                <th>过期日期</th>
                                                <td>{{ group_order.expiredAt }}</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>


                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">状态</h3>
                        </div>
                        <div class="box-body">
                            <div>
                                {{ form_start(form) }}
                                {{ form_widget(form) }}
                                <button class="btn btn-primary">{{ button_label|default('提交') }}</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>



                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <!-- BAR CHART -->
                            <div class="box box-warning">
                                <div class="box-header with-border">
                                    <h3 class="box-title">用户信息</h3>
                                </div>
                                <div class="box-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped">
                                            <thead>
                                            <tr>
                                                <th class="col-md-2">集call订单ID</th>
                                                <th class="col-md-2">用户</th>
                                                <th class="col-md-2">角色</th>
                                                <th class="col-md-2">状态</th>
                                                <th class="col-md-2">创建时间</th>
                                                <th class="col-md-2">更新时间</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% if group_order.groupUserOrders.count %}
                                                {% for item in group_order.groupUserOrders %}
                                                    <tr>
                                                        <td>{{ item.id }}</td>
                                                        <td>
                                                            {{ item.user }}
                                                        </td>
                                                        <td>{{ item.role }}</td>
                                                        <td>{{ item.courseStatusText }}</td>
                                                        <td>{{ item.createdAt }}</td>
                                                        <td>{{ item.updatedAt }}</td>
                                                    </tr>
                                                {% endfor %}
                                            {% else %}
                                                <tr>
                                                    <td colspan="7" class="alert">no records found</td>
                                                </tr>
                                            {% endif %}
                                            </tbody>
                                            <tfoot>
                                            <tr>
                                                <th colspan="6">总计({{ group_order.groupUserOrders.count }})</th>
                                            </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                    <!-- /table -->
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>

                    </div>
                    <!-- /row -->
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
