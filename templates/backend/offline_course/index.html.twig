{% extends 'backend/base.html.twig' %}

{% block title %}活动管理{% endblock %}

{% import 'form/macros.html.twig' as macros %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                    <h3 class="box-title">总计 ({{ pagination.getTotalItemCount }})</h3>
                    <a href="{{ path('offline_course_new') }}" type="button" class="btn btn-info pull-right">添加</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <form class="cmxform" id="myForm">
                            <div class="col-md-3 form-group">
                                <label>科目</label>
                                <select name="subject" class="form-control chosen">
                                    <option value="">全部</option>
                                    {% for subject, text in subjects %}
                                        <option value="{{ subject }}"{% if subject == form.subject %} selected{% endif %}>{{ text }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <label>&nbsp;</label>
                                <input class="form-control btn btn-primary" type="submit" value="搜索"/>
                            </div>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th class="col-md-1">ID</th>
                                <th class="col-md-1">科目</th>
                                <th class="col-md-1">活动</th>
                                <th class="col-md-2">讲师</th>
                                <th class="col-md-3">日期</th>
                                <th class="col-md-3">关联活动</th>
                                <th class="col-md-3">地址</th>
                                <th class="col-md-1">状态</th>
                                <th class="col-md-1 text-center hidden-xs">操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if pagination.getTotalItemCount %}
                                {% for item in pagination %}
                                    <tr>
                                        <td>{{ item.id }}</td>
                                        <td>{{ item.subjectText }}</td>
                                        <td>{{ item.product.title }}</td>
                                        <td>{{ item.teacher.name }}</td>
                                        <td><span {% if item.isExpired %} class="text-red fa fa-clock-o" {% else %} class="text-green fa fa-clock-o"  {% endif %}></span> {{ item.startDateFormatted }} - {{ item.endDateFormatted }}</td>
                                        <td>{{ item.refCourseName }}</td>
                                        <td>{{ item.address }}</td>
                                        <td>{{ item.product.statusText }}</td>
                                        <td class="text-center">
                                            <div class="btn-group">
                                                <a href="{{ path('offline_course_edit', {'id': item.id}) }}" title="修改">
                                                    <span class="fa fa-edit"></span>
                                                </a>&nbsp;
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="7" class="alert">no records found</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <div class="no-margin pull-right">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    {% include 'backend/includes/delete.modal.html.twig' with {title: 'Course'} %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include '/backend/includes/delete.js.html.twig' with {title: 'Course'} %}
{% endblock %}
