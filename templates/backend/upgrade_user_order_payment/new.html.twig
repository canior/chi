{% extends 'backend/base.html.twig' %}

{% block title %}添加支付记录{% endblock %}

{% block body %}
    <div class="row">
    <div class="col-xs-12">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <div class="table-responsive">
                        <h3 class="box-title">交易信息</h3>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>会员升级订单号</th>
                                <td>{{ upgrade_user_order_payment.upgradeUserOrder.id }}</td>
                            </tr>
                            <tr>
                                <th>旧会员等级</th>
                                <td>{{ upgrade_user_order_payment.upgradeUserOrder.user.userLevelText }}</td>
                            </tr>
                            <tr>
                                <th>新会员等级</th>
                                <td>{{ upgrade_user_order_payment.upgradeUserOrder.userLevelText }}</td>
                            </tr>
                            <tr>
                                <th>订单金额</th>
                                <td>￥{{ upgrade_user_order_payment.upgradeUserOrder.total }}</td>
                            </tr>
                            <tr>
                                <th>创建时间</th>
                                <td>{{ upgrade_user_order_payment.upgradeUserOrder.createdAtFormatted }}</td>
                            </tr>
                            <tr>
                                <th>更新时间</th>
                                <td>{{ upgrade_user_order_payment.upgradeUserOrder.updatedAtFormatted }}</td>
                            </tr>
                            <tr>
                                <th>用户ID</th>
                                <td>{{ upgrade_user_order_payment.upgradeUserOrder.user.id }}</td>
                            </tr>
                            <tr>
                                <th>姓名</th>
                                <td>{{ upgrade_user_order_payment.upgradeUserOrder.user.name }}</td>
                            </tr>
                            <tr>
                                <th>电话</th>
                                <td>{{ upgrade_user_order_payment.upgradeUserOrder.user.phone }}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <!-- general form elements disabled -->
            <div class="box">
                <div class="box-header with-border">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                    <h3 class="box-title">创建支付记录</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    {{ include('backend/upgrade_user_order_payment/_form.html.twig') }}
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
{% endblock %}