{% extends 'backend/base.html.twig' %}

{% block title %}产品订单{% endblock %}

{% import 'form/macros.html.twig' as macros %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <!-- BAR CHART -->
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">订单信息</h3>
                                </div>
                                <div class="box-body">
                                    <div class="box box-solid">
                                        <div class="table-responsive">
                                            <table class="table table-bordered table-striped">
                                                <tr>
                                                    <th>产品订单号</th>
                                                    <td>{{ group_user_order.id }}</td>
                                                </tr>
                                                <tr>
                                                    <th>用户</th>
                                                    <td>{{ group_user_order.user }}</td>
                                                </tr>
                                                <tr>
                                                    <th>会员升级订单</th>
                                                    <td>
                                                        <a href="{{ path('upgrade_user_order_edit', {'id': group_user_order.upgradeUserOrder.id}) }}">
                                                            {{ group_user_order.upgradeUserOrder }}
                                                        </a>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>产品</th>
                                                    <td>{{ group_user_order.product }}</td>
                                                </tr>
                                                <tr>
                                                    <th>金额</th>
                                                    <td>￥{{ group_user_order.total }}</td>
                                                </tr>
                                                <tr>
                                                    <th>状态</th>
                                                    <td>{{ group_user_order.statusText }}</td>
                                                </tr>
                                                <tr>
                                                    <th>支付状态</th>
                                                    <td>{{ group_user_order.paymentStatusText }}</td>
                                                </tr>
                                                <tr>
                                                    <th>创建时间</th>
                                                    <td>{{ group_user_order.createdAt }}</td>
                                                </tr>
                                                <tr>
                                                    <th>更新时间</th>
                                                    <td>{{ group_user_order.updatedAt }}</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-12">
                        <!-- BAR CHART -->
                        <div class="box box-info">
                            <div class="box-header with-border">
                                <h3 class="box-title">更新订单</h3>
                            </div>
                            <div class="box-body">
                                <div class="row">
                                    {{ form_start(form) }}
                                    <div class="form-group col-md-12">
                                        <label class="control-label">物流地址</label>
                                        <div class="form-control-static"><label>{{ group_user_order.userAddress }}</label></div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.status) }}
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.paymentStatus) }}
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.carrierName) }}
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.trackingNo) }}
                                    </div>
                                    <div class="form-group col-md-6">
                                        <button class="btn btn-primary">{{ button_label|default('提交') }}</button>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <!-- BAR CHART -->
                            <div class="box box-warning">
                                <div class="box-header with-border">
                                    <h3 class="box-title">最近5条操作记录</h3>
                                </div>
                                <div class="box-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped">
                                            <thead>
                                            <tr>
                                                <th width="10%">创建时间</th>
                                                <th width="10%">状态变化</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% if group_user_order.groupUserOrderLogs.count > 1 %}
                                                {% for item in group_user_order.groupUserOrderLogs.slice(0, 5) %}
                                                    <tr>
                                                        <td>{{ item.createdAt }}</td>
                                                        <td>{{ item.description }}</td>
                                                    </tr>
                                                {% endfor %}
                                            {% else %}
                                                <tr>
                                                    <td colspan="2" class="alert">no records found</td>
                                                </tr>
                                            {% endif %}
                                            </tbody>
                                            <tfoot>
                                            <tr>
                                                <th colspan="2">总计({{ group_user_order.groupUserOrderLogs.count }})</th>
                                            </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                    <!-- /table -->
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>
                    <!-- /row -->
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
