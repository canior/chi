{% extends 'backend/base.html.twig' %}

{% block title %}User Share Source Info{% endblock %}

{% import 'form/macros.html.twig' as macros %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <!-- BAR CHART -->
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">当前用户</h3>

                                    <div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                                    class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="chart" style="height: 200px;">
                                        <div class="box box-solid">
                                            <div class="box-body">
                                                <h4 style="background-color:#f7f7f7; font-size: 18px; text-align: center; padding: 7px 10px; margin-top: 0;">
                                                    用户ID ─ {{ user.id }}
                                                </h4>
                                                <div class="media">
                                                    <div class="media-left">
                                                        {% if user.avatarUrl %}
                                                            <img src="{{ user.avatarUrl }}" alt="MaterialPro" class="media-object"
                                                                 style="width: 150px;height: auto;border-radius: 4px;box-shadow: 0 1px 3px rgba(0,0,0,.15);">
                                                        {% endif %}
                                                    </div>
                                                    <div class="media-body">
                                                        <div class="clearfix">
                                                            <h4 style="margin-top: 0">用户ID ─ {{ user.id }}</h4>
                                                            <h4 style="margin-top: 0">昵称 ─ {{ user.nickname }}</h4>
                                                            <h4 style="margin-top: 0">总分享数 ─ {{ user.userStatistics.sharedNum|default(0) }}</h4>
                                                            <h4 style="margin-top: 0">下线总数 ─ {{ user.userStatistics.childrenNum|default(0) }}</h4>
                                                            <h4 style="margin-top: 0">有效下线 ─ {{ user.subUsers.count|default(0) }}</h4>
                                                            <h4 style="margin-top: 0">无效下线 ─ {{ user.userStatistics.childrenNum|default(0) - user.subUsers.count|default(0) }}</h4>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <!-- BAR CHART -->
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">上线用户</h3>

                                    <div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                                    class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="chart" style="height: 200px;">
                                        <div class="box box-solid">
                                            <div class="box-body">
                                                <h4 style="background-color:#f7f7f7; font-size: 18px; text-align: center; padding: 7px 10px; margin-top: 0;">
                                                    用户ID ─ {{ user.parentUser.id|default }}
                                                </h4>
                                                <div class="media">
                                                    <div class="media-left">
                                                        {% if user.parentUser and user.parentUser.avatarUrl %}
                                                            <img src="{{ user.parentUser.avatarUrl }}" alt="MaterialPro" class="media-object"
                                                                 style="width: 150px;height: auto;border-radius: 4px;box-shadow: 0 1px 3px rgba(0,0,0,.15);">
                                                        {% endif %}
                                                    </div>
                                                    <div class="media-body">
                                                        <div class="clearfix">
                                                            <h4 style="margin-top: 0">用户ID ─ {{ user.parentUser.id|default }}</h4>
                                                            <h4 style="margin-top: 0">昵称 ─ {{ user.parentUser.nickname|default }}</h4>
                                                            <h4 style="margin-top: 0">总分享数 ─ {{ user.parentUser.userStatistics.sharedNum|default(0) }}</h4>
                                                            <h4 style="margin-top: 0">下线总数 ─ {{ user.parentUser.userStatistics.childrenNum|default(0) }}</h4>
                                                            <h4 style="margin-top: 0">有效下线 ─ {{ user.parentUser.subUsers.count|default(0) }}</h4>
                                                            <h4 style="margin-top: 0">无效下线 ─ {{ user.parentUser.userStatistics.childrenNum|default(0) - user.parentUser.subUsers.count|default(0) }}</h4>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <!-- BAR CHART -->
                            <div class="box box-warning">
                                <div class="box-header with-border">
                                    <h3 class="box-title">下线用户列表 | 有效用户总数({{ user.subUsers.count|default(0) }}) 失效用户总数({{ user.userStatistics.childrenNum|default(0) - user.subUsers.count|default(0) }})</h3>

                                    <div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                                    class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped">
                                            <thead>
                                            <tr>
                                                <th width="10%">用户ID</th>
                                                <th width="10%">头像</th>
                                                <th width="10%">传销收益总数</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% if underlingUsers is not empty %}
                                                {% for item in underlingUsers %}
                                                    <tr>
                                                        <td>
                                                            <a class="btn btn-info btn-xs" href="{{ path('user_info', {'id': item.id}) }}" target="_blank" title="查看详情">
                                                                {{ item.user.id }}
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-info btn-xs" href="{{ path('user_info', {'id': item.id}) }}" target="_blank" title="查看详情">
                                                                {{ item.user.nickname }}
                                                            </a>
                                                        </td>
                                                        <td>{{ item.userRewardsTotal|default(0)|number_format }}</td>
                                                    </tr>
                                                {% endfor %}
                                            {% else %}
                                                <tr>
                                                    <td colspan="7" class="alert alert-warning">no records found</td>
                                                </tr>
                                            {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /table -->
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <!-- BAR CHART -->
                            <div class="box box-warning">
                                <div class="box-header with-border">
                                    <h3 class="box-title">分享源列表 | 总分享数({{ user.userStatistics.sharedNum|default(0) }})</h3>

                                    <div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                                    class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped">
                                            <thead>
                                            <tr>
                                                <th width="10%">分享源ID</th>
                                                <th width="10%">分享源类型</th>
                                                <th width="10%">产品ID</th>
                                                <th width="10%">产品名</th>
                                                <th width="10%">分享页</th>
                                                <th width="10%">带来的用户数</th>
                                                <th width="10%">分享源创建时间</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% if shareSources is not empty %}
                                                {% for item in shareSources %}
                                                    <tr>
                                                        <td>{{ item.shareSource.id }}</td>
                                                        <td>{{ item.shareSource.typeText|default }}</td>
                                                        <td>
                                                            {% if item.shareSource.product %}
                                                            <a class="btn btn-info btn-xs" href="{{ path('product_edit', {'id': item.shareSource.product.id}) }}" target="_blank" title="查看详情">
                                                                {{ item.shareSource.product.id }}
                                                            </a>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {% if item.shareSource.product %}
                                                                <a class="btn btn-info btn-xs" href="{{ path('product_edit', {'id': item.shareSource.product.id}) }}" target="_blank" title="查看详情">
                                                                    {{ item.shareSource.product.title }}
                                                                </a>
                                                            {% endif %}
                                                        </td>
                                                        <td>{{ item.shareSource.page }}</td>
                                                        <td>{{ item.totalUsers }}</td>
                                                        <td>{{ item.shareSource.createdAt }}</td>
                                                    </tr>
                                                {% endfor %}
                                            {% else %}
                                                <tr>
                                                    <td colspan="7" class="alert alert-warning">no records found</td>
                                                </tr>
                                            {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /table -->
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>
                    <!-- /row -->
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
