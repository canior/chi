{% extends 'backend/base.html.twig' %}

{% block title %}用户分享{% endblock %}

{% import 'form/macros.html.twig' as macros %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <!-- BAR CHART -->
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">分享详情</h3>

                                    <div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                                    class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="chart" style="min-height: 200px;">
                                        <div class="box box-solid">
                                            <div class="box-body">
                                                <div class="media">
                                                    <div class="media-left">
                                                        {% if shareSource.bannerFile %}
                                                            <img src="{{ path('imagePreview', {fileId: shareSource.bannerFile.id}) }}"
                                                                 alt="MaterialPro" class="media-object"
                                                                 style="width: 150px;height: auto;border-radius: 4px;box-shadow: 0 1px 3px rgba(0,0,0,.15);">
                                                        {% endif %}
                                                    </div>
                                                    <div class="media-body">
                                                        <div class="clearfix">
                                                            <h5>
                                                                用户ID:
                                                                {{ shareSource.user.id }}
                                                            </h5>
                                                            <h5>用户昵称: {{ shareSource.user.nickname }}</h5>
                                                            <h5>姓名: {{ shareSource.user.name }}</h5>
                                                            <h5>会员等级: {{ shareSource.user.userLevelText }}</h5>
                                                            {% if shareSource.product %}
                                                                <h5>课程: {{ shareSource.product.title }}</h5>
                                                            {% endif %}
                                                            {% if shareSource.groupOrder %}
                                                                <h5>
                                                                    拼团订单ID:
                                                                    <a class="btn btn-info btn-xs"
                                                                       href="{{ path('group_order_info', {'id': shareSource.groupOrder.id}) }}"
                                                                       target="_blank" title="查看详情">
                                                                        {{ shareSource.groupOrder.id }}
                                                                    </a>
                                                                </h5>
                                                            {% endif %}
                                                            <h5>分享类型: {{ shareSource.typeText }}</h5>
                                                            <h5>分享名称: {{ shareSource.title }}</h5>
                                                            <h5>跳转页面: {{ shareSource.page }}</h5>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <!-- BAR CHART -->
                            <div class="box box-warning">
                                <div class="box-header with-border">
                                    <h3 class="box-title">打开此分享用户列表</h3>

                                    <div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                                    class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped">
                                            <thead>
                                            <tr>
                                                <th width="10%">用户ID</th>
                                                <th width="10%">昵称</th>
                                                <th width="10%">姓名</th>
                                                <th width="10%">会员等级</th>
                                                <th width="10%">打开时间</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% if shareSource.shareSourceUsers.count %}
                                                {% for item in shareSource.shareSourceUsers %}
                                                    <tr>
                                                        <td>
                                                            {{ item.user.id }}
                                                        </td>
                                                        <td>
                                                            {{ item.user.nickname }}
                                                        </td>
                                                        <td>
                                                            {{ item.user.name }}
                                                        </td>
                                                        <td>
                                                            {{ item.user.userLevelText }}
                                                        </td>
                                                        <td>{{ item.createdAt }}</td>
                                                    </tr>
                                                {% endfor %}
                                            {% else %}
                                                <tr>
                                                    <td colspan="3" class="alert">no records found</td>
                                                </tr>
                                            {% endif %}
                                            </tbody>
                                            <tfoot>
                                            <tr>
                                                <th colspan="3">总打开分享用户数({{ shareSource.shareSourceUsers.count }})</th>
                                            </tr>
                                            </tfoot>
                                        </table>

                                        <a class="btn btn-danger" href="{{ path('share_source_index') }}">{{ '返回用户分享'|trans }}</a>
                                    </div>
                                    <!-- /table -->
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>
                    <!-- /row -->
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
