{% extends 'backend/base.html.twig' %}

{% block title %}课程评价{% endblock %}

{% import 'form/macros.html.twig' as macros %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                    <h3 class="box-title">总计 ({{ pagination.getTotalItemCount }})</h3>
                    {#<a href="{{ path('product_review_new') }}" type="button" class="btn btn-info pull-right">添加</a>#}
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <form class="cmxform" id="myForm">
                            <div class="col-md-2 form-group">
                                <label>评分</label>
                                <select name="rate" class="form-control chosen">
                                    <option value="">全部</option>
                                    {% for rate, text in rates %}
                                        <option value="{{ rate }}"{% if rate == form.rate %} selected{% endif %}>{{ text }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-2 form-group">
                                <label>状态</label>
                                <select name="status" class="form-control chosen">
                                    <option value="">全部</option>
                                    {% for status, text in statuses %}
                                        <option value="{{ status }}"{% if status == form.status %} selected{% endif %}>{{ text }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-2 form-group">
                                <label>&nbsp;</label>
                                <input class="form-control btn btn-primary" type="submit" value="搜索"/>
                            </div>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th class="col-md-1">评价ID</th>
                                <th class="col-md-2">课程</th>
                                <th class="col-md-1">讲师</th>
                                <th class="col-md-1">用户</th>
                                <th class="col-md-1">评分</th>
                                <th class="col-md-3">评价</th>
                                <th class="col-md-1">状态</th>
                                <th class="col-md-1">创建时间</th>
                                <th class="col-md-1 text-center hidden-xs">操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if pagination.getTotalItemCount %}
                                {% for item in pagination %}
                                    <tr>
                                        <td>{{ item.id }}</td>
                                        <td>
                                           {{ item.product.title }}
                                        </td>
                                        <td>
                                            {{ item.product.course.teacher.name }}
                                        </td>
                                        <td>
                                            {{ item.courseStudent.studentUser}}
                                        </td>
                                        <td>{{ item.rate }}</td>
                                        <td>{{ item.review }}</td>
                                        <td>{{ item.statusText }}</td>
                                        <td>{{ item.createdAt }}</td>
                                        <td class="text-center">
                                            <div class="btn-group">
                                                <a href="{{ path('course_review_edit', {id: item.id}) }}"
                                                   title="修改">
                                                    <span class="fa fa-edit"></span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="11" class="alert">no records found</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <div class="no-margin pull-right">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    {% include 'backend/includes/delete.modal.html.twig' with {title: 'ProductReview'} %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include '/backend/includes/delete.js.html.twig' with {title: 'ProductReview'} %}
{% endblock %}
