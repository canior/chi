{% extends 'backend/base.html.twig' %}

{% block title %}课程评价{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-body">
                    <div class="table-responsive">
                        <h3 class="box-title">课程信息</h3>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>评价ID</th>
                                <td>{{ product_review.id }}</td>
                            </tr>
                            <tr>
                                <th>课程</th>
                                <td>{{ product_review.product.title }}</td>
                            </tr>
                            <tr>
                                <th>讲师</th>
                                <td>{{ product_review.product.course.teacher.name }}</td>
                            </tr>
                            <tr>
                                <th>用户</th>
                                <td>{{ product_review.user }}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <!-- general form elements disabled -->
            <div class="box">
                <div class="box-header with-border">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    {{ include('backend/course_review/_form.html.twig', {'button_label': '提交'}) }}
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
{% endblock %}