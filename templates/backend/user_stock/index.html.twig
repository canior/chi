{% extends 'backend/base.html.twig' %}

{% block title %}名额管理{% endblock %}

{% import 'form/macros.html.twig' as macros %}

{% block body %}



    <div class="box">
        <div class="box-body">
            <div class="table-responsive">
                <h3 class="box-title">用户信息</h3>
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>用户ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>头像</th>
                        <td>
                            <img class="{{ user.avatarUrl ? '' : 'hidden' }}" src="{{ user.avatarUrl }}" width="40"
                                 height="40">
                        </td>
                    </tr>
                    <tr>
                        <th>电话</th>
                        <td>{{ user.phone }}</td>
                    </tr>
                    <tr>
                        <th>剩余名额</th>
                        <td>{{ user.recommandStock }}</td>
                    </tr>
                    <tr>
                        <th>已用名额</th>
                        <td>{{ user.totalUserAccountOrdersAsRecommander }}</td>
                    </tr>
                    <tr>
                        <th>总名额</th>
                        <td>{{ user.totalRecommandStock }}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                    <h3 class="box-title">已使用名额 ({{ pagination.getTotalItemCount }})</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th class="col-md-2">用户ID</th>
                                <th class="col-md-2">头像</th>
                                <th class="col-md-2">姓名</th>
                                <th class="col-md-2">电话</th>
                                <th class="col-md-2">用户等级</th>
                                <th class="col-md-2">升级订单号</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if pagination.getTotalItemCount %}
                                {% for item in pagination %}
                                    <tr>
                                        <td>{{ item.upgradeUserOrder.user.id }}</td>
                                        <td>
                                            <img class="{{ item.upgradeUserOrder.user.avatarUrl ? '' : 'hidden' }}" src="{{ item.user.avatarUrl }}" width="40"
                                             height="40">
                                        </td>
                                        <td>{{ item.upgradeUserOrder.user.name }}</td>
                                        <td>{{ item.upgradeUserOrder.user.phone }}</td>
                                        <td>{{ item.upgradeUserOrder.user.userLevelText }}</td>
                                        <td>
                                            <a href="{{ path('upgrade_user_order_edit', {'id': item.upgradeUserOrder.id}) }}">
                                            {{ item.upgradeUserOrder.id }}
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="6" class="alert">no records found</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <div class="no-margin pull-right">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
            <!-- /.box -->
            <div>
                <a class="btn btn-danger" href="{{ path('user_stock_statistic') }}">{{ '返回账户管理'|trans }}</a>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    {% include 'backend/includes/delete.modal.html.twig' with {title: 'UserAccountOrder'} %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include '/backend/includes/delete.js.html.twig' with {title: 'UserAccountOrder'} %}
{% endblock %}
