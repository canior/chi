{% set notices = app.session.flashBag.get('notice') %}
{% if notices is not empty %}
    <div class="alert alert-success">
        {% if notices|length > 1 %}
            <ul>
                {% for flashMessage in notices %}
                    <li>{{ flashMessage }}</li>
                {% endfor %}
            </ul>
        {% else %}
            {% for flashMessage in notices %}
                {{ flashMessage }}
            {% endfor %}
        {% endif %}
    </div>
{% endif %}
{% set dangers = app.session.flashBag.get('danger') %}
{% if dangers is not empty %}
    <div class="alert alert-danger">
        {% if dangers|length > 1 %}
            <ul>
                {% for flashMessage in dangers %}
                    <li>{{ flashMessage }}</li>
                {% endfor %}
            </ul>
        {% else %}
            {% for flashMessage in dangers %}
                {{ flashMessage }}
            {% endfor %}
        {% endif %}
    </div>
{% endif %}
