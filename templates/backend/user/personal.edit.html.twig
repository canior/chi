{% extends 'backend/base.html.twig' %}

{% block title %}用户管理{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">

                    <div class="table-responsive col-md-6">
                        <h3 class="box-title">微信登录信息</h3>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th class="col-md-3">用户ID</th>
                                <td class="col-md-9">{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>微信昵称</th>
                                <td>{{ user.nickname }}</td>
                            </tr>
                            <tr>
                                <th>头像</th>
                                <td>
                                    {% if (user.avatarUrl) %}
                                        <img class="img img-responsive" width="100px" height="100px"
                                             src="{{ user.avatarUrl }}">
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>创建时间</th>
                                <td>{{ user.createdAt }}</td>
                            </tr>
                            <tr>
                                <th>上次登录时间</th>
                                <td>{{ user.lastLogin ? user.lastLogin|date : '' }}</td>
                            </tr>
                        </table>
                    </div>

                    <div class="table-responsive col-md-6">
                        <h3 class="box-title">关联讲师</h3>
                        {% if (user.teacher) %}
                            <table class="table table-bordered table-striped">
                                <tr>
                                    <th class="col-md-3">讲师ID</th>
                                    <td class="col-md-9">{{ user.teacher.id }}</td>
                                </tr>
                                <tr>
                                    <th>姓名</th>
                                    <td>{{ user.teacher.name }}</td>
                                </tr>
                                <tr>
                                    <th>头像</th>
                                    <td>
                                        {{ user.teacher.teacheravatarfile ? user.teacher.teacheravatarfile.id : null }}
                                    </td>
                                </tr>
                                <tr>
                                    <th>职称</th>
                                    <td>{{ user.teacher.title }}</td>
                                </tr>
                                <tr>
                                    <th>简介</th>
                                    <td>{{ user.teacher.description }}</td>
                                </tr>
                            </table>
                        {% else %}
                            <button class="btn btn-primary">{{ button_label|default('关联讲师') }}</button>
                        {% endif %}
                    </div>
                </div>
            </div>
            <!-- general form elements disabled -->
            <div class="box">
                <div class="box-header with-border">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    {{ include('backend/user/_form.html.twig', {'button_label': '提交'}) }}
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
{% endblock %}