{% extends 'backend/base.html.twig' %}

{% block title %}User Rewards Info{% endblock %}

{% import 'form/macros.html.twig' as macros %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <!-- BAR CHART -->
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">当前用户</h3>

                                    <div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                                    class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="chart" style="height: 200px;">
                                        <div class="box box-solid">
                                            <div class="box-body">
                                                <h4 style="background-color:#f7f7f7; font-size: 18px; text-align: center; padding: 7px 10px; margin-top: 0;">
                                                    用户ID ─ {{ user.id }}
                                                </h4>
                                                <div class="media">
                                                    <div class="media-left">
                                                        {% if user.avatarUrl %}
                                                            <img src="{{ user.avatarUrl }}" alt="MaterialPro" class="media-object"
                                                                 style="width: 150px;height: auto;border-radius: 4px;box-shadow: 0 1px 3px rgba(0,0,0,.15);">
                                                        {% endif %}
                                                    </div>
                                                    <div class="media-body">
                                                        <div class="clearfix">
                                                            <h4 style="margin-top: 0">用户ID ─ {{ user.id }}</h4>
                                                            <h4 style="margin-top: 0">昵称 ─ {{ user.nickname }}</h4>
                                                            <h4 style="margin-top: 0">总收益 ─ {{ user.userStatistics.rewardsTotal|default(0)|number_format }}</h4>
                                                            <h4 style="margin-top: 0">拼团订单收益 ─ {{ user.userStatistics.orderRewardsTotal|default(0)|number_format }}</h4>
                                                            <h4 style="margin-top: 0">传销收益 ─ {{ user.userStatistics.userRewardsTotal|default(0)|number_format }}</h4>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <!-- BAR CHART -->
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">上线用户</h3>

                                    <div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                                    class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="chart" style="height: 200px;">
                                        <div class="box box-solid">
                                            <div class="box-body">
                                                <h4 style="background-color:#f7f7f7; font-size: 18px; text-align: center; padding: 7px 10px; margin-top: 0;">
                                                    用户ID ─ {{ user.parentUser.id|default }}
                                                </h4>
                                                <div class="media">
                                                    <div class="media-left">
                                                        {% if user.parentUser and user.parentUser.avatarUrl %}
                                                            <img src="{{ user.parentUser.avatarUrl }}" alt="MaterialPro" class="media-object"
                                                                 style="width: 150px;height: auto;border-radius: 4px;box-shadow: 0 1px 3px rgba(0,0,0,.15);">
                                                        {% endif %}
                                                    </div>
                                                    <div class="media-body">
                                                        <div class="clearfix">
                                                            <h4 style="margin-top: 0">用户ID ─ {{ user.parentUser.id|default }}</h4>
                                                            <h4 style="margin-top: 0">昵称 ─ {{ user.parentUser.nickname|default }}</h4>
                                                            <h4 style="margin-top: 0">总收益 ─ {{ user.parentUser.userStatistics.rewardsTotal|default(0)|number_format }}</h4>
                                                            <h4 style="margin-top: 0">拼团订单收益 ─ {{ user.parentUser.userStatistics.orderRewardsTotal|default(0)|number_format }}</h4>
                                                            <h4 style="margin-top: 0">传销收益 ─ {{ user.parentUser.userStatistics.userRewardsTotal|default(0)|number_format }}</h4>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <!-- BAR CHART -->
                            <div class="box box-warning">
                                <div class="box-header with-border">
                                    <h3 class="box-title">传销收益列表(按收益时间倒序) | 总传销收益({{ user.userStatistics.userRewardsTotal|default(0)|number_format }})</h3>

                                    <div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                                    class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped">
                                            <thead>
                                            <tr>
                                                <th width="10%">订单ID</th>
                                                <th width="10%">拼团ID</th>
                                                <th width="10%">产品名</th>
                                                <th width="10%">下线用户ID</th>
                                                <th width="10%">收益类型</th>
                                                <th width="10%">收益金额</th>
                                                <th width="10%">收益时间</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% if user.groupUserOrderRewards.count %}
                                                {% for item in user.groupUserOrderRewards %}
                                                    <tr>
                                                        <td>
                                                            <a class="btn btn-info btn-xs" href="{{ path('group_user_order_info', {'id': item.groupUserOrder.id}) }}" target="_blank" title="查看详情">
                                                                {{ item.groupUserOrder.id }}
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-info btn-xs" href="{{ path('group_order_info', {'id': item.groupUserOrder.groupOrder.id}) }}" target="_blank" title="查看详情">
                                                                {{ item.groupUserOrder.groupOrder.id }}
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-info btn-xs" href="{{ path('product_edit', {'id': item.groupUserOrder.groupOrder.product.id}) }}" target="_blank" title="查看详情">
                                                                {{ item.groupUserOrder.groupOrder.product.title }}
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-info btn-xs" href="{{ path('user_info', {'id': item.groupUserOrder.user.id}) }}" target="_blank" title="查看详情">
                                                                {{ item.groupUserOrder.user.id }}
                                                            </a>
                                                        </td>
                                                        <td>{{ 'TODO: 传销???' }}</td>
                                                        <td>{{ item.userRewards }}</td>
                                                        <td>{{ item.createdAt }}</td>
                                                    </tr>
                                                {% endfor %}
                                            {% else %}
                                                <tr>
                                                    <td colspan="7" class="alert alert-warning">no records found</td>
                                                </tr>
                                            {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /table -->
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <!-- BAR CHART -->
                            <div class="box box-warning">
                                <div class="box-header with-border">
                                    <h3 class="box-title">拼团收益列表(按收益时间倒序) | 总拼团收益({{ user.userStatistics.orderRewardsTotal|default(0)|number_format }})</h3>

                                    <div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                                    class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped">
                                            <thead>
                                            <tr>
                                                <th width="10%">订单ID</th>
                                                <th width="10%">拼团ID</th>
                                                <th width="10%">产品名</th>
                                                <th width="10%">团长用户ID</th>
                                                <th width="10%">收益类型</th>
                                                <th width="10%">收益金额</th>
                                                <th width="10%">收益时间</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% if user.groupUserOrders.count %}
                                                {% for item in user.groupUserOrders %}
                                                    <tr>
                                                        <td>
                                                            <a class="btn btn-info btn-xs" href="{{ path('group_user_order_info', {'id': item.id}) }}" target="_blank" title="查看详情">
                                                                {{ item.id }}
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-info btn-xs" href="{{ path('group_order_info', {'id': item.groupOrder.id}) }}" target="_blank" title="查看详情">
                                                                {{ item.groupOrder.id }}
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-info btn-xs" href="{{ path('product_edit', {'id': item.groupOrder.product.id}) }}" target="_blank" title="查看详情">
                                                                {{ item.groupOrder.product.title }}
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-info btn-xs" href="{{ path('user_info', {'id': item.groupOrder.user.id}) }}" target="_blank" title="查看详情">
                                                                {{ item.groupOrder.user.id }}
                                                            </a>
                                                        </td>
                                                        <td>{{ 'TODO: 拼团???' }}</td>
                                                        <td>{{ item.orderRewards }}</td>
                                                        <td>{{ item.createdAt }}</td>
                                                    </tr>
                                                {% endfor %}
                                            {% else %}
                                                <tr>
                                                    <td colspan="7" class="alert alert-warning">no records found</td>
                                                </tr>
                                            {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /table -->
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>
                    <!-- /row -->
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
