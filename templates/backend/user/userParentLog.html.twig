{% import 'form/macros.html.twig' as macros %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">推荐人变更记录： ({{ userParentLogs.count }})</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th class="col-md-3">日期</th>
                                <th class="col-md-9">变更记录</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if userParentLogs.count %}
                                {% for log in userParentLogs %}
                                    <tr>
                                        <td>{{ log.createdAtFormatted }}</td>
                                        <td>{{ log.memo }}</td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="2" class="alert">no records found</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

{% endblock %}
