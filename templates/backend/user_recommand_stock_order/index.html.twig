{% extends 'base.html.twig' %}

{% block title %}UserRecommandStockOrder{% endblock %}

{% import 'form/macros.html.twig' as macros %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                    <h3 class="box-title">名额交易订单 ({{ dataTotal }})</h3>
                    <a href="{{ path('user_recommand_stock_order_new', {userId: userId}) }}" type="button"
                       class="btn btn-info pull-right">添加名额</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th class="col-md-2">创建日期</th>
                                <th class="col-md-2">名额交易ID</th>
                                <th class="col-md-2">数量</th>
                                <th class="col-md-2">升级订单</th>
                                <th class="col-md-3">备注</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if dataTotal %}
                                {% for item in data %}
                                    <tr>
                                        <td>{{ item.createdAtFormatted }}</td>
                                        <td>{{ item.id }}</td>
                                        <td>{{ item.qty }}</td>
                                        <td>
                                            {% if item.upgradeUserOrder %}
                                            <a href="{{ path('upgrade_user_order_edit', {id: item.upgradeUserOrder.id}) }}" type="button">
                                                {{ item.upgradeUserOrder }}
                                            </a>
                                            {% endif %}
                                        </td>
                                        <td>{{ item.memo }}</td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="5" class="alert">no records found</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    {% include 'backend/includes/delete.modal.html.twig' with {title: 'UserRecommandStockOrder'} %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include '/backend/includes/delete.js.html.twig' with {title: 'UserRecommandStockOrder'} %}
{% endblock %}
