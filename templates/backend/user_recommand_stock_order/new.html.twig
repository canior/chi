{% extends 'backend/base.html.twig' %}

{% block title %}增加或减少用户名额{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <!-- general form elements disabled -->
            <div class="box">
                <div class="box-header with-border">
                    {% include "backend/includes/app.session.flashbag.html.twig" %}
                    <h3 class="box-title">增加或减少名额</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <h3 class="box-title">用户信息</h3>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>用户ID</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>头像</th>
                                <td>
                                    <img class="{{ user.avatarUrl ? '' : 'hidden' }}" src="{{ user.avatarUrl }}" width="40"
                                         height="40">
                                </td>
                            </tr>
                            <tr>
                                <th>电话</th>
                                <td>{{ user.phone }}</td>
                            </tr>
                            <tr>
                                <th>剩余名额</th>
                                <td>{{ user.recommandStock }}</td>
                            </tr>
                            <tr>
                                <th>已用名额</th>
                                <td>{{ user.totalUserAccountOrdersAsRecommander }}</td>
                            </tr>
                            <tr>
                                <th>总名额</th>
                                <td>{{ user.totalRecommandStock }}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="with-border">
                        <h3 class="box-title">添加或减少名额</h3>
                        {{ include('backend/user_recommand_stock_order/_form.html.twig') }}
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
{% endblock %}