/* pages/course/pay.wxss */
@import "/pages/tmpl/userinfo.wxss";
page {
  background-color: #f5f5f5;
}
.container {
  background-color: #fff;
}
.bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-top: 1px solid #e8e8e8;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
}
.bottom view {
  font-size: 28rpx;
  padding: 30rpx;
}
.bottom text {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6C00;  
}
.bottom .btn {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  background-color: #FF6C00;
  text-align: center;
  width: 322rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 40rpx;
}