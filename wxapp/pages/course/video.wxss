/* pages/course/video.wxss */
@import "/pages/tmpl/bottom.wxss";
@import "/pages/tmpl/share.wxss";
.container video {
  width: 100%;
}
.course {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.course .line.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.course .line.desc {
  font-size: 28rpx;
  color: #666;
}
.section .chi-item .left image {
  width: 44px;
  height: 44px;
  border-radius: 50%;
}
.section .chi-item .right {
  min-height: 44px;
}
.section .desc {
  font-size: 12px;
  color: #666;
  padding-bottom: 20rpx;
}
