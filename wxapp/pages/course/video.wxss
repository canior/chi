/* pages/course/video.wxss */
@import "/pages/tmpl/bottom.wxss";
@import "/pages/tmpl/share.wxss";
.container video {
  width: 100%;
}
.course {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.course .line.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.course .line.desc {
  font-size: 24rpx;
  color: #b2b2b2;
}
.course .line.desc-box {
  font-size: 24rpx;
  color: #b2b2b2;
  width: 260px;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;  
}
.section .chi-item .left image {
  border-radius: 50%;
}
