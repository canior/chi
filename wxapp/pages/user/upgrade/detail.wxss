/* pages/user/upgrade/index.wxss */
@import "/pages/tmpl/bottom.wxss";
@import "/pages/tmpl/share.wxss";
.banner {
  text-align: center;
  position: relative;
}
.banner swiper {
  height: 414rpx;
}
.banner swiper image {
  width: 100%;
}
.line {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 0 10rpx;
}
.desc {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
}
.chi-reward-container {
  margin-bottom: 20rpx;
}
/*商品详情*/
.specs .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
}
.specs .img {
  text-align: center;
  position: relative;
}
.specs .img image {
  width: 690rpx;
  height: 450rpx;
}
.specs .img image.loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}