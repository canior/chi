<!--pages/user/order/index.wxml-->
<import src="/pages/tmpl/price.wxml"/>
<view class="navbar">
  <block wx:for="{{menu}}" wx:key="index">
    <view class="nav{{curStatus==item.status ? ' active' : ''}}" data-status="{{item.status}}" bindtap="tapMenu"><text>{{item.name}}</text></view>
  </block>
</view>
<view class="container">
  <block wx:for="{{groupUserOrders}}" wx:key="index">
    <view class="section">
      <view class="row-header">
        <view class="left">订单编号: {{item.id}}</view>
        <view class="right">{{item.statusText}}</view>
      </view>
      <view class="row" bindtap="toUserOrderDetail" data-id="{{item.id}}">
        <view class="left">
          <image src="{{imgUrlPrefix + '/' + item.product.productImages[0].fileId}}"/>
        </view>
        <view class="right">
            <view class="line name">{{item.product.title}}</view>
            <!--template is="price" data="{{...item}}"/-->
            <view class="line price">{{item.product.price}}<text>x1</text></view>
        </view>
      </view>
      <view class="row-footer">
        <view class="left"></view>
        <view class="right">
          共1件商品 合计:<text>¥{{item.paymentTotal}}</text>
        </view>
      </view>
      <view class="row-footer" wx:if="{{item.status == 'shipping'}}">
        <view class="left"></view>
        <view class="right">
          <button class="view" bindtap="tracking">查看物流</button>
          <button class="ship" bindtap="deliver" data-id="{{item.id}}">确认收货</button>
       </view>
      </view>
      <view class="row-footer" wx:if="{{item.status == 'delivered'}}">
        <view class="left"></view>
        <view class="right">
          <button class="view" bindtap="toUserComment" data-id="{{item.id}}" wx:if="{{item.productReviews.length > 0}}">查看评价</button>
          <button class="comment" bindtap="toUserComment"  data-id="{{item.id}}" wx:if="{{item.productReviews.length == 0}}">商品评价</button>
       </view>
      </view>
    </view>
  </block>
</view>