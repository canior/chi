/* pages/user/order/index.wxss */
.container {
  padding: 32rpx;
  background-color: #f2f6f9;
}
.navbar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx 0;
  background-color: #fff;
}
.nav {
  font-size: 30rpx;
  text-align: center;
  flex: 1;
}.nav text {
  color: #999;  
}.nav.active text {
  color: #333;
  border-bottom: 2px solid #1AAA92;
  padding-bottom: 5rpx;
}
.section {
  margin-bottom: 32rpx;
}
.row-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #ececec;
  background-color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx 30rpx 0 0;
}.row-header .left {
  color: #666
}.row-header .right {
  color: #FF6C00
}
.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #ececec;
  background-color: #fff;
}
.row-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background-color: #fff;
  padding: 10rpx 20rpx;
}
.row .left {
  display: flex;
  align-items: center;
}
.row .left image {
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
}
.row .right {
  font-size: 28rpx;
  color: #333;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 128rpx;
  width: 100%;
}
.row .right .line {
  display: flex;
  justify-content: space-between;
}.row .right .line.name {
  font-size: 28rpx;
  color: #333;
}.row .right .line.price {
  font-size: 28rpx;
  color: #333;
}.row .right .line.price text {
  color: #999;
}
.row-footer .right {
  display: flex;
  font-size: 28rpx;
  color: #333;
}.row-footer .right text {
  font-size: 32rpx;
  color: #ff6c00;
}.row-footer .right button {
  font-size: 28rpx;
  padding: 0rpx 30rpx;
  line-height: 60rpx;
}.row-footer .right button.view {
  background-color: #fff;
  color: #666;
  margin-right: 20rpx;
}.row-footer .right button.ship {
  background-color: #1AAA92;
  color: #fff;
}.row-footer .right button.comment {
  background-color: #FF6C00;
  color: #fff;
}.row-footer:last-child {
  border-radius: 0 0 30rpx 30rpx;
}