<!--pages/user/order/review.wxml-->
<view class="container">
  <view class="row">
    <view class="left">
      <image src="{{imgUrlPrefix + '/' + groupUserOrder.product.productImages[0].fileId}}"/>
    </view>
    <view class="right">
      <view class="name">{{groupUserOrder.product.title}}</view>
      <view class="desc">{{groupUserOrder.product.shortDescription}}</view>
      <view class="chi-price-container">
        <view class="price">拼团价￥<text>{{groupUserOrder.product.price}}</text></view>
        <view class="freight">包邮</view>
        <view class="ori-price">￥{{groupUserOrder.product.originalPrice}}</view>
      </view>
    </view>
  </view>
</view>
<view class="split-line"/>
<view class="container">
  <view class="comment">
    <view class="title">商品评价</view>
    <view class="rate-container">
      <image wx:if="{{rate < 1}}" data-idx="1" data-val="off" bindtap="{{groupUserOrder.productReviews.length == 0 ? 'rate' : ''}}" src="/images/star.png"/>
      <image wx:if="{{rate > 0}}" data-idx="1" data-val="on" bindtap="{{groupUserOrder.productReviews.length == 0 ? 'rate' : ''}}" src="/images/star-selected.png"/>
      <image wx:if="{{rate < 2}}" data-idx="2" data-val="off" bindtap="{{groupUserOrder.productReviews.length == 0 ? 'rate' : ''}}" src="/images/star.png"/>
      <image wx:if="{{rate > 1}}" data-idx="2" data-val="on" bindtap="{{groupUserOrder.productReviews.length == 0 ? 'rate' : ''}}" src="/images/star-selected.png"/>
      <image wx:if="{{rate < 3}}" data-idx="3" data-val="off" bindtap="{{groupUserOrder.productReviews.length == 0 ? 'rate' : ''}}" src="/images/star.png"/>
      <image wx:if="{{rate > 2}}" data-idx="3" data-val="on" bindtap="{{groupUserOrder.productReviews.length == 0 ? 'rate' : ''}}" src="/images/star-selected.png"/>
      <image wx:if="{{rate < 4}}" data-idx="4" data-val="off" bindtap="{{groupUserOrder.productReviews.length == 0 ? 'rate' : ''}}" src="/images/star.png"/>
      <image wx:if="{{rate > 3}}" data-idx="4" data-val="on" bindtap="{{groupUserOrder.productReviews.length == 0 ? 'rate' : ''}}" src="/images/star-selected.png"/>
      <image wx:if="{{rate < 5}}" data-idx="5" data-val="off" bindtap="{{groupUserOrder.productReviews.length == 0 ? 'rate' : ''}}" src="/images/star.png"/>
      <image wx:if="{{rate > 4}}" data-idx="5" data-val="on" bindtap="{{groupUserOrder.productReviews.length == 0 ? 'rate' : ''}}" src="/images/star-selected.png"/>
    </view>

    <view class="upload-row">
      <view class="upload-box" wx:for="{{uploadStack}}" wx:key="index" data-index="{{index}}" bindtap="{{index == stackIndex && groupUserOrder.productReviews.length == 0 ? 'upload' : ''}}" wx:if="{{index <= stackIndex}}">
          <view class="tl"/><view class="tr"/><view class="bl"/><view class="br"/>
          <block wx:if="{{!item.tmpImageFilePath}}">
              <image class="camera" src="/images/camera.png"/>
              <text>上传照片</text>
          </block>
          <image wx:if="{{item.tmpImageFilePath}}" src="{{item.tmpImageFilePath}}" mode='aspectFit'/>
          <icon type="clear" size="20" data-index="{{index}}" catchtap="remove" wx:if="{{item.tmpImageFilePath && groupUserOrder.productReviews.length == 0}}"/>
      </view>
    </view>

    <view class="review">  
      <textarea placeholder="亲，商品质量如何？" value="{{review}}" maxlength="200" placeholder-style="font-size:24rpx;color:#888" bindblur="review" disabled="{{groupUserOrder.productReviews.length > 0}}"></textarea>
    </view>
  </view>
</view>

<view class="bottom" bindtap="submit" wx:if="{{groupUserOrder.productReviews.length == 0}}">提交</view>