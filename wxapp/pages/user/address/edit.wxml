<!--pages/user/address/edit.wxml-->
<view class="container">
  <view class="row">
    <input placeholder="姓名" value="{{name}}" bindblur="inputName"/>
  </view>
  <view class="row">
    <input placeholder="手机号码" value="{{phone}}" bindblur="inputPhone"/>
  </view>
  <view class="row">
    <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
      <input placeholder="省市、区县" value="{{regionText}}" disabled="true"/>
    </picker>    
  </view>
  <view class="row">
    <input placeholder="详细地址" value="{{address}}" bindblur="inputAddress"/>
  </view>
  <view class="row" wx:if="{{!isDefault}}">
    <checkbox-group bindchange="setDefault" data-setdefault="{{setDefault}}">
      <checkbox checked="{{setDefault}}"/>设为默认地址
    </checkbox-group>
  </view>
</view>

<view class="bottom" bindtap="save">
  <view class="btn">保存</view>
</view>
<view class="bottom">
  <view class="left" bindtap="save">保存地址</view>
  <view class="right" bindtap="import"><image src="/images/wx.png"/>微信导入地址</view>
</view>
