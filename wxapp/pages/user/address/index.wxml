<!--pages/user/address/index.wxml-->
<view class="container">

  <view class="item" wx:for="{{addresses}}" wx:key="index">
    <view class="top" bindtouchstart="touchS" bindtouchmove="touchM" bindtouchend="touchE" style="{{item.txtStyle}}" data-index="{{index}}">
      <view class="left">
        <view class="line">
          <view class="name">{{item.name}}</view>
          <view class="phone">{{item.phone}}</view>
        </view>
        <view class="line">
          <view class="default"><text wx:if="{{item.is_default}}">默认</text></view>
          <view class="addr">{{item.address}}</view>
        </view>
      </view>
      <view class="right" bindtap="editAddress" data-id="{{item.id}}">
        <image src="/images/edit.png"/>
      </view>
    </view>
    <view class="del" bindtap="delAddress" data-id="{{item.id}}">删除</view>
  </view>
</view>

<view class="bottom">
  <view class="left" bindtap="editAddress">＋新建地址</view>
  <view class="right"><image src="/images/wx.png"/>微信导入地址</view>
</view>
