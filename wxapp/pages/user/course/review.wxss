/* pages/user/course/review.wxss */
.row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20rpx 20rpx;
  border-bottom: 1px solid #ececec;
}.row:last-child {
  border: none;
}
.row .left {
  font-size: 24rpx;
  color: #888;
  display: flex;
}
.row .left image {
  width: 150rpx;
  height: 150rpx;
  border: 1px solid #e5e5e5;
  margin-right: 20rpx;
}
.row .right {
  font-size: 24rpx;
  display: flex;
}
.row .right .reward {
  font-size: 36rpx;
  color: #ff4d42;
}
.row .line {
  display: flex;
}
.row .line.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.row .line.sub-title {
  font-size: 26rpx;
  color: #333;
}
.row .line.desc {
  font-size: 24rpx;
  color: #b2b2b2;
}
.row .line.desc-box {
  font-size: 24rpx;
  color: #b2b2b2;
  width: 260px;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;  
}
.comment {
  text-align: center;
}
.comment .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #353535;
  padding: 30rpx;
}
.comment .upload-row {
  display: flex;
  justify-content: flex-start;
  margin-left: 30rpx;
}
.comment .upload-box {
  width: 172rpx;
  height: 172rpx;
  margin: 40rpx 20rpx 40rpx 0rpx;
  border: 1px dashed #aeaeae;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.comment icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}
.comment .upload-box .tl {
  position: absolute;
  top: -1px;
  left: -1px;
  border-top: 2px solid #f23560;
  border-left: 2px solid #f23560;
  width: 15rpx;
  height: 15rpx;
}
.comment .upload-box .tr {
  position: absolute;
  top: -1px;
  right: -1px;
  border-top: 2px solid #f23560;
  border-right: 2px solid #f23560;
  width: 15rpx;
  height: 15rpx;
}
.comment .upload-box .bl {
  position: absolute;
  bottom: -1px;
  left: -1px;
  border-bottom: 2px solid #f23560;
  border-left: 2px solid #f23560;
  width: 15rpx;
  height: 15rpx;
}
.comment .upload-box .br {
  position: absolute;
  bottom: -1px;
  right: -1px;
  border-bottom: 2px solid #f23560;
  border-right: 2px solid #f23560;
  width: 15rpx;
  height: 15rpx;
}
.comment .upload-box image {
  width: 172rpx;
  height: 172rpx; 
}.comment .upload-box image.camera {
  width: 66rpx;
  height: 66rpx;
}
.comment .upload-box text {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}
.comment .review {
  background-color: #f5f5f5;
  margin: 20rpx 30rpx;
  padding: 20rpx;
  text-align: left;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 30rpx;
  color: #000;
  background-color: #ffdf00;
  padding: 20rpx;
}

