/* pages/product/detail.wxss */
.banner {
  text-align: center;
  position: relative;
}
.banner swiper {
  height: 555rpx;
}
.banner swiper image {
  width: 100%;
  height: 555rpx;
}
.banner .tip {
  font-size: 24rpx;
  color: #353535;
  background-color: #ffdd00;
  width: 80rpx;
  height: 106rpx;
  border-radius: 0 0 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 30rpx;
  position: absolute;
  top: 0rpx;
  left: 30rpx;
}
.line {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.line .sold {
  font-size: 20rpx;
  color: #353535;
}
.name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.desc {
  font-size: 24rpx;
  color: #b2b2b2;
}
.chi-reward-container {
  margin-bottom: 20rpx;
}
.specs .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #353535;
  margin: 20rpx 0;
}
.specs .img {
  text-align: center;
}
.specs image {
  width: 690rpx;
  height: 450rpx;
}
.bottom {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1px solid #e8e8e8;
  height: 110rpx;
}
.bottom image {
  width: 41rpx;
  height: 41rpx;
  margin-bottom: 6rpx;
}
.bottom .home, .bottom .service {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  font-size: 24rpx;
  color: #353535;
  width: 17%;
}
.bottom .home {
  border-right: 1px solid #e8e8e8;  
}
.bottom .btn {
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  background-color: #ffdf00;
  width: 66%;
  height: 110rpx;
  line-height: 110rpx;
}
.btn-clear {
  background-color: transparent;
  border: 0;
  margin: 0 !important;
  padding: 0 !important;
  width: 100%;
  position: absolute;
  border-radius: 0 !important;
  line-height: inherit;
}
.btn-clear::after {
  transform: inherit;
  -webkit-transform: inherit;
  top: inherit;
  left: inherit;
  border: 0;
}
