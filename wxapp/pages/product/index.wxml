<!--pages/product/index.wxml-->
<view class="container">
  <view class="banner">
    <swiper indicator-dots="true" autoplay="true" interval="5000" duration="500" circular="true">
      <swiper-item wx:for="123" wx:key="*this">
        <image src="/images/demo/banner.jpg" />
      </swiper-item>
    </swiper>
  </view>

  <view class="product-container">
    <view class="product" wx:for="123" wx:for-item="product" wx:key="index" bindtap="toProductDetail" data-id="{{product.id}}">
      <view class="img">
        <image mode="aspectFit" src="/images/demo/product.jpg"/>
        <view class="tip"><text>两人</text><text>拼团</text></view>
        <view class="stock">剩1000件</view>
      </view>
      <view class="name">
        <view>【麦摄氏度】5瓶装 代餐 330毫升</view>
        <view class="pull-right">返现￥20</view>
      </view>
      <view class="price-container">
        <view class="price">拼团价￥<text>100</text></view>
        <view class="freight">包邮</view>
        <view class="ori-price">￥200</view>
        <view class="btn">我要拼团</view>
      </view>
    </view>
  </view>
</view>
