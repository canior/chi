<!--pages/product/detail.wxml-->
<view class="container">
  <view class="banner">
    <swiper indicator-dots="true" autoplay="true" interval="5000" duration="500" circular="true">
      <swiper-item wx:for="123" wx:key="*this">
        <image mode="widthFix" src="/images/demo/product.png" />
      </swiper-item>
    </swiper>
    <view class="tip"><text>两人</text><text>拼团</text></view>    
  </view>
  <view class="stock">
    <view>还剩: 1000件</view>
    <view class="count-down">倒计时: 23:00:20后结束</view>
  </view>
  <view class="price-container">
    <view class="price">拼团价￥<text>100</text></view>
    <view class="freight">包邮</view>
    <view class="ori-price">￥200</view>
    <view class="sold">已售1234份</view>
  </view>

</view>
