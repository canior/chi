.vbar::before {
  content: ' ';
  border-left: 3px solid #353535;
  margin-right: 10rpx;
}
.split-line {
    background: #ddd;
    width: 100%;
    height: 1px;
    margin: 10rpx 0;
}
.bottom-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  background-color: #fff;
  padding: 25rpx;
  border-top: 1px solid #ddd;
}
.bottom-btn .btn {
  font-size: 30rpx;
  color: #fff;
  background-color: #f23560;
  padding: 26rpx 0;
  border-radius: 10rpx;
}
.rate-container image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 5rpx;
}
.arrow-rt {
    position: absolute;
    top: 0;
    right: 0;
    border-top: 1px solid #888;
    border-right: 1px solid #888;
    width: 20rpx;
    height: 20rpx;
    transform: rotate(45deg);
}