<!--pages/user/address/edit.wxml-->
<view class="container">
  <view class="row">
    <input placeholder="姓名" value="{{address.name}}" bindblur="inputName"/>
  </view>
  <view class="row">
    <input placeholder="手机号码" value="{{address.phone}}" bindblur="inputPhone"/>
  </view>
  <view class="row" wx:if="{{!referee}}">
    <input placeholder="身份证号码" value="{{address.address}}" bindblur="inputAddress"/>
  </view>
</view>

<view class="bottom">
  <view class="btn" bindtap="save">保存</view>
</view>
