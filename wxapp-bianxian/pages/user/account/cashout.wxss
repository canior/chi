/* pages/user/account/cashout.wxss */
.top-container {
  padding: 20rpx;
  background-color: #f5f5f5;
}
.top {
  color: #fff;
  background-color: #e02e24;
  text-align: center;
  border-radius: 30rpx;
}
.top .tip {
  width: 0;
  height: 0;
  border-left: 100px solid transparent;
  border-right: 100px solid transparent;
  border-bottom: 20px solid #f2aba7;
  margin-left: 155rpx;
}
.top .title {
  font-size: 24rpx;
  padding-top: 60rpx;
}
.top .total {
  font-size: 72rpx;
  font-weight: bold;
  padding: 10rpx 0;
}
.top .btn text {
  font-size: 24rpx;
  border: 1px solid #000;
  border-radius: 30rpx;
  padding: 8rpx 30rpx;
}
.top .btn {
  margin-bottom: 40rpx;
}
.line {
  display: flex;
}.line text {
  font-size: 36rpx;
}
.bottom {
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  background-color: #e02e24;
  margin: 50rpx 70rpx;
  border-radius: 40rpx;
}