<!--pages/user/referral/index.wxml-->
<block wx:if="{{isLogin}}">
  <view class="top-container">
    <view class="top">
      <view class="title">我的推荐(人)</view>
      <view class="total">3</view>
      <view class="tip"/>
    </view>
  </view>
  <view class="navbar">
    <block wx:for="{{menu}}" wx:key="index">
      <view class="nav{{isValid==item.isValid ? ' active' : ''}}" data-isvalid="{{item.isValid}}" bindtap="tapMenu">{{item.name}}</view>
    </block>
  </view>
  <view class="split-brand"/>
</block>

<block wx:if="{{isLogin}}">
  <!--好友咖位排行榜-->
  <view class="container">
    <view class="rank">
      <view class="table">
        <view class="tr" wx:for="123" wx:key="index">
          <view class="td idx" wx:if="{{index == 0}}"><image src="/images/top-medal.png"/></view>
          <view class="td idx" wx:if="{{index > 0}}">{{index + 1}}</view>
          <view class="td user"><image src="/images/user-avatar.png"/>
            <text>唐亚迪</text>
          </view>
          <view class="td"><text>普通会员\n2019-01-01</text></view>
          <view class="td">已分享</view>
        </view>      
      </view>
    </view>
  </view><!--好友咖位排行榜-->
  <view class="split-brand"/>
</block>

<block wx:if="{{isLogin && user.totalRewards > 0}}">
  <view class="bottom" bindtap="">查看排行榜</view>
</block>
<block wx:if="{{isLogin && user.totalRewards == 0}}">
  <view class="bottom" bindtap="">快去邀请好友一起下单吧</view>
</block>
<block wx:if="{{!isLogin}}">
  <view class="bottom" bindtap="">邀请好友</view>
</block>
