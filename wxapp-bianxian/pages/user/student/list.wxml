<!--pages/user/student/list.wxml-->
<view class="container">
  <view class="chi-item">
    <view class="left"><image mode="aspectFit" src="{{imgUrlPrefix+'/'+course.courseImages[0].fileId}}"/></view>
    <view class="right">
      <view class="line title">{{course.title}}</view>
      <view class="line desc">科目: {{course.subjectText}}</view>
      <view class="line desc">时间: {{course.startDate}} - {{course.endDate}}</view>
      <view class="line desc">地点: {{course.address}}</view>
      <view class="line desc">讲师: {{course.teacher.name}} | {{course.teacher.title}}</view>
    </view>
    <view class="right-append">{{students.length}}人</view>
  </view>
</view>

<view class="split-brand"/>

<block wx:if="{{students.length > 0}}">
  <!--列表-->
  <view class="container">
    <view class="rank">
      <view class="table">
        <view class="tr" wx:for="{{students}}" wx:key="index">
          <view class="td user"><image src="{{item.user.avatarUrl}}"/>
            <text>{{item.user.nickname}}</text>
          </view>
          <view class="td"><text>{{item.user.name}}</text></view>
          <view class="td">{{item.user.userLevelText}}</view>
        </view>      
      </view>
    </view>
  </view><!--列表-->
  <view class="split-brand"/>
</block>
