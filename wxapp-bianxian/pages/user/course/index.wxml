<!--pages/user/course/index.wxml-->
<import src="/pages/tmpl/price.wxml"/>
<view class="navbar">
  <block wx:for="{{menu}}" wx:key="index">
    <view class="nav{{curStatus==item.status ? ' active' : ''}}" data-status="{{item.status}}" bindtap="tapMenu">{{item.name}}</view>
  </block>
</view>
<view class="split-brand"/>

<block wx:for="{{myCourses}}" wx:key="index">
  <view class="section">
    <view class="row">
      <view class="left">订单号：{{item.id}}</view>
      <view class="right pending">{{item.statusText}}</view>
    </view>
    <view class="row">
      <view class="left">
        <image src="{{imgUrlPrefix+'/'+item.product.courseImages[0].fileId}}"/>
        <view>
          <view class="line name">{{item.product.subjectText}}</view>
          <view class="line desc">{{item.product.startDate}} - {{item.product.endDate}}</view>
          <view class="line desc">{{item.product.address}}</view>
        </view>
      </view>
      <view class="right">
        <view>实付￥{{item.paymentTotal}}</view>
        <view><button bindtap="toMyCourseLog" data-id="{{item.id}}">课程日志</button></view>
      </view>
    </view>
  </view>
  <view class="split-brand"/>
</block>
