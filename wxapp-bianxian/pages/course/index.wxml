<!--pages/course/index.wxml-->
<view class="container">
  
  <view class="banner">
    <swiper indicator-dots="true" autoplay="true" interval="5000" duration="500" circular="true">
      <swiper-item wx:for="{{banners}}" wx:key="index" wx:for-item="banner" bindtap="redirect" data-url="{{banner.redirectUrl}}">
        <image src="{{imgUrlPrefix + '/' + banner.bannerFileId}}" />
      </swiper-item>
    </swiper>
  </view>  
  
  <block wx:for="{{courses}}" wx:for-item="course" wx:key="id" bindtap="toCourseDetail" data-id="{{course.id}}">
    <view class="chi-item">
      <view class="left"><image src="{{imgUrlPrefix + '/' + course.courseImages[0].fileId}}"/></view>
      <view class="right">
        <view class="line title">{{course.subjectText}}</view>
        <view class="line desc">时间：{{course.startDate}}至{{course.endDate}}</view>
        <view class="line desc">地点：{{course.region.fullname}} {{course.address}}</view>
        <view class="line">
          <view class="price">￥{{course.price}}</view>
          <button catchtap="toCourseDetail" data-id="{{course.id}}">我要报名</button>
        </view>
      </view>
    </view>
    <view class="split-line"/>
  </block>

</view>