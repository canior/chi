/* pages/group/pay.wxss */
@import "/pages/tmpl/address.wxss";
page {
  background-color: #f5f5f5;
}
.container {
  background-color: #fff;
}
.total {
  font-size: 30rpx;
  color: #888;
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  margin: 10px 0;
}
.chi-item .left image {
  width: 135rpx;
  height: 135rpx;
}
.chi-item .right .line.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}.chi-item .right .line.title text {
  font-weight: normal;
  color: #888;
}.chi-item .right .line.desc {
  display: flex;
  justify-content: space-between;
  align-items: center;
}.chi-item .right .line.desc text {
  font-size: 30rpx;
  color: #333;
}
.bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #888;
  background-color: #fff;
  border-top: 1px solid #e8e8e8;  
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
}
.bottom view {
  padding: 30rpx;
  width: 60%;
}
.bottom text {
  color: #ff4d42;  
}
.bottom .btn {
  color: #000;
  background-color: #ffdf00;
  text-align: center;
  width: 40%;
  height: 110rpx;
  line-height: 110rpx;
}
.arrow-right {
  border-top: 3px solid #888;
  border-right: 3px solid #888;
  width: 25rpx;
  height: 25rpx;
  transform: rotate(45deg);
}