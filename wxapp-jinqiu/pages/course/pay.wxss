/* pages/course/pay.wxss */
@import "/pages/tmpl/userinfo.wxss";
page {
  background-color: #f5f5f5;
}
.container {
  background-color: #fff;
}
.bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #888;
  background-color: #fff;
  border-top: 1px solid #e8e8e8;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
}
.bottom view {
  padding: 30rpx;
  width: 60%;
}
.bottom text {
  font-size: 32rpx;
  color: #ff4d42;  
}
.bottom .btn {
  background-color: #ffdf00;
  text-align: center;
  width: 40%;
  height: 110rpx;
  line-height: 110rpx;
}