<template name="bottom">
  <view class="chi-bottom">
      <view class="item home" bindtap="wxHome">
        <image src="/images/home2.png"/>
        <text>首页</text>
      </view>
      <view class="item service" bindtap="wxShowShareModal">
        <image src="/images/share.png"/>
        <text>分享</text>
      </view>
      <block wx:if="{{type == 'course' && user.userLevel == 'VISITOR'}}">
        <button class="item btn group" bindtap="wxCreateGroup" disabled="{{btnDisabled}}" wx:if="{{!groupUserOrder || groupUserOrder.groupOrderStatus != 'completed'}}"><text>集Call</text></button>
        <button class="item btn group" bindtap="wxViewCourse" disabled="{{btnDisabled}}" wx:if="{{groupUserOrder && groupUserOrder.groupOrderStatus == 'completed'}}"><text>观看课程</text></button>
        <button class="item btn group" bindtap="wxUpgrade" disabled="{{btnDisabled}}"><text>学员升级</text></button>
      </block>
      <block wx:if="{{type == 'course' && user.userLevel == 'ADVANCED'}}">
        <button class="item btn group" bindtap="wxViewCourse" disabled="{{btnDisabled}}"><text>观看课程</text></button>
      </block>
      <block wx:if="{{type == 'product'}}">
        <button class="item btn group" bindtap="wxCreateOrder" disabled="{{btnDisabled}}"><text>购买￥{{product.price}}</text></button>
      </block>
  </view>

</template>