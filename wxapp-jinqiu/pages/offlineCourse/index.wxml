  <block wx:for="{{courses}}" wx:for-item="course" wx:key="index">
    <view class="offline-item" bindtap="toCourseDetail" data-id="{{course.productId}}">
      <view class="up"><image mode="widthFix" src="{{imgUrlPrefix + '/' + course.courseImages[0].fileId}}"/></view>
      <view class="down">
        <view class="line title">
          <view>{{course.title}}</view>
          <view>￥{{course.price}}</view>
        </view>
        <view class="line desc">
          <view>科目: {{course.subjectText}}</view>
          <view>讲师: {{course.teacher.name}} | {{course.teacher.title}}</view>
        </view>
        <view class="line desc">
          <view>时间: {{course.startDate}} - {{course.endDate}}</view>
          <view>地点: {{course.region.fullname}} {{course.address}}</view>
        </view>
      </view>
    </view>
    <view class="split-line"/>
  </block>

</view>