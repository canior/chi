/* pages/user/offlineCourse/index.wxss */
.navbar {
  display: flex;
  border-top: 1px solid #ececec;
}
.nav {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #353535;
  background-color: #ececec;
  padding: 20rpx 0;
}.nav.active {
  color:#000;
  background-color: #ffdf00;
}
.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #ececec;
}.row:last-child {
  border: none;
}
.row .left {
  font-size: 24rpx;
  color: #888;
  display: flex;
  align-items: center;
}
.row .left image {
  width: 145rpx;
  height: 145rpx;
  margin-right: 20rpx;
  border: 1px solid #e5e5e5;
}
.row .right {
  font-size: 26rpx;
  text-align: center;
}.row .right.pending {
  color: #888;
}
.row .line {
  font-size: 24rpx;
  color: #888;
  line-height: 30rpx;
}
.row .line.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 50rpx;
}
.row .line.desc {
  font-size: 24rpx;
  color: #b2b2b2;
}
.row .right .reward {
  font-size: 36rpx;
  color: #ff4d42;
}
.row .right.btn {
  font-size: 24rpx;
  color: #ff4d42;
  text-align: center;
  border: 1px solid #ff4d42;
  border-radius: 20rpx;
  margin: 0 10rpx;
  padding: 0 10rpx;
}
.none {
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  color: #888;
}
.bottom {
  font-size: 30rpx;
  text-align: center;
  background-color: #ffdf00;
  margin: 50rpx 70rpx;
  padding: 20rpx 0;
  border-radius: 40rpx;
}