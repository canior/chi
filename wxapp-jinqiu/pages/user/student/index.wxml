<!--pages/user/student/index.wxml-->
<block>
  <view class="top-container">
    <view class="top">
      <view class="title">我的学员(人)</view>
      <view class="total">{{user ? user.totalStudents : 0}}</view>
      <view class="tip"/>
    </view>
  </view>
  <view class="split-brand"/>
</block>

<block wx:for="{{courses}}" wx:key="index">
<view class="section">
  <view class="row">
    <view class="left">
      <image src="{{imgUrlPrefix+'/'+item.courseImages[0].fileId}}"/>
      <view>
        <view class="line title">{{item.subjectText}}</view>
        <view class="line">{{item.startDate}} - {{item.endDate}}</view>
        <view class="line">{{item.address}}</view>
      </view>
    </view>
    <view class="right" bindtap="toMyStudentList" data-id="{{item.id}}">
      <view class="reward">20人</view>
      <view class="btn">学员列表</view>
    </view>
  </view>
</view>
<view class="split-brand"/>
</block>

