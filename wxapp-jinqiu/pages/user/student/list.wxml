<!--pages/user/student/list.wxml-->
<view class="container">
  <view class="chi-item">
    <view class="left"><image mode="widthFix" src="{{imgUrlPrefix+'/'+course.courseImages[0].fileId}}"/></view>
    <view class="right">
      <view class="line title">{{course.title}}</view>
      <view class="line desc-box">{{course.shortDescription}}</view>
      <view class="line sub-title">讲师: {{course.teacher.name}} | {{course.teacher.title}}</view>
    </view>
    <view class="right-append">{{course.totalStudents}}人</view>
  </view>
</view>

<view class="split-brand"/>

<block wx:if="{{students.length > 0}}">
  <!--列表-->
  <view class="container">
    <view class="rank">
      <view class="table">
        <view class="tr">
          <view class="th">学员</view>
          <view class="th">联系电话</view>
          <view class="th">等级</view>
        </view>      
        <view class="tr" wx:for="{{students}}" wx:key="index">
          <view class="td user">
            <image src="{{item.avatarUrl}}"/>
            <text>{{item.nickname}}</text>
          </view>
          <view class="td">{{item.phone ? item.phone : ''}}</view>
          <view class="td">{{item.userLevelText}}</view>
        </view>      
      </view>
    </view>
  </view><!--列表-->
  <view class="split-brand"/>
</block>
