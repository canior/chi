.tab-bar {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  line-height:100rpx;
  font-size: 34rpx;
  text-align: center;
  margin-top: 20rpx;
}
.tab-bar .default {
  color: #353535;
  background-color: #ececec;    
  flex:1;
}
.tab-bar .active {
  color: #000;
  background-color: #ffdf00;    
  flex:1;
}
.tab-content {
  margin: 40rpx;
}
.tab-content.show {
  display: block;
}
.tab-content.hidden {
  display: none;
}
